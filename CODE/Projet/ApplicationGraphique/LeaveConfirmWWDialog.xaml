<Window x:Class="ApplicationGraphique.LeaveConfirmWWDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="LeaveConfirmWWDialog" Height="100" Width="200" Background="#FF252323" MaxHeight="100" MaxWidth="200" MinHeight="250" MinWidth="600">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Êtes-vous sûr de vouloir quitter ?" Foreground="White" FontFamily="Roboto Th" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" TextAlignment="Center" FontSize="30"/>
        <Button Background="DarkRed" Foreground="White" Content="Non" FontSize="30" Grid.Row="2" MaxHeight="50" Margin="30 0 0 50" Click="Button_Click_Non"/>
        <Button Background="Green" Foreground="White" Content="Oui" FontSize="30" Grid.Column="2" Grid.Row="2" MaxHeight="50" Margin="0 0 30 50" Click="Button_Click_Oui"/>
    </Grid>
</Window>
